<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity"
    android:layout_gravity="center"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter Your Workout Details Below!"
                android:textColor="#223770"
                android:textSize="30dp"
                />


            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Name of Your Workout!"
                android:textSize="25dp"
                 />

            <EditText
                android:id="@+id/etSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Number of Sets"
                android:textColor="#223770"
                android:textSize="25dp"

               />

            <TextView
                android:id="@+id/tvPickedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Date"
                android:textColor="#223770"
                android:textSize="30dp"
                />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Notes"
                android:textColor="#223770"
                android:textSize="25dp"


                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exerciseList"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:clipToPadding="false"
                tools:listitem="@layout/card_view" />


            <Button
                android:id="@+id/btnAddWorkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D86572"
                android:onClick="addWorkoutClick"
                android:padding="15dp"
                android:text="Add Workout"
                android:textAllCaps="false"
                android:textSize="20dp"
                />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:menu="@menu/bottom_navigation_menu" />




        </LinearLayout>




</LinearLayout>